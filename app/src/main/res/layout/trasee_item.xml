<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titlu_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Titlu: "
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="6dp"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/data_traseu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Data: "
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titlu_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/distanta_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Distanta planificata: "
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data_traseu" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_buton_traseu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sterge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/open_buton_traseu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vizualizeaza"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/delete_buton_traseu"
            app:layout_constraintTop_toBottomOf="@+id/delete_buton_traseu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>